<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CLCVaccineStoreUpdateActivity">

    <include
        android:id="@+id/clc_home_include"
        layout="@layout/toolbar"
        android:layout_width="412dp"
        android:layout_height="64dp"
        tools:layout_editor_absoluteX="-5dp"
        tools:layout_editor_absoluteY="6dp" />


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/clc_vaccine_store_update_card"
        android:layout_width="326dp"
        android:layout_height="198dp"
        android:background="#C5EADB"
        android:focusable="true"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        app:cardMaxElevation="3dp"
        app:cardPreventCornerOverlap="true"
        app:cardUseCompatPadding="true"
        app:contentPadding="10dp"
        app:contentPaddingBottom="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.528">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/clc_vaccine_store_update_vaccinename"
                android:layout_width="match_parent"
                android:layout_height="32dp"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1"
                android:text="TextView"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/clc_vaccine_store_update_vaccindoselabel"
                    android:layout_width="144dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="Dose:"
                    android:textStyle="italic" />


                <TextView
                    android:id="@+id/clc_vaccine_store_update_vaccindose"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="TextView"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/clc_vaccine_store_update_vaccinestocklabel"
                    android:layout_width="189dp"
                    android:layout_height="29dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="Current Stock:"
                    android:textStyle="italic" />

                <EditText
                    android:id="@+id/clc_vaccine_store_update_vaccinestock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:inputType="number"
                    android:text="TextView"
                    android:textStyle="bold" />


            </LinearLayout>


        </LinearLayout>


    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/clc_update_vaccine_store_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:backgroundTint="@color/colorPrimaryDark"
        android:clickable="true"
        android:text="Add New Stock"
        android:textColor="#FFFFFF"
        android:visibility="visible"
        app:icon="@drawable/ic_baseline_edit_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/clc_vaccine_store_update_card" />


</androidx.constraintlayout.widget.ConstraintLayout>